#!/bin/sh
PACKAGE_TARNAME="@PACKAGE_TARNAME@"
prefix="@prefix@"
exec_prefix="@exec_prefix@"
bindir="@bindir@"
datarootdir="@datarootdir@"
docdir="@docdir@"
htmldir="@htmldir@"
libdir="@libdir@"
case $1 in
    --prefix)   echo "$prefix";;
    --exec_prefix)
		echo "$exec_prefix";;
    --bindir)	echo "$bindir";;
    --datarootdir)
		echo "$datarootdir";;
    --docdir)   echo "$docdir";;
    --htmldir)	echo "$htmldir";;
    --libdir)   echo "$libdir";;
    --cppflags)	echo @CPPFLAGS@ -I@includedir@;;
    --cxxflags)	echo @CXXFLAGS@;;
    --ldflags)	echo -L@libdir@ -lmps -ltensor @LDFLAGS@ @LIBS@;;
    *)		cat <<EOF
tensor-config [--cppflags | --cxxflags | --ldflags]

	Outputs appropriate flags for compiling and linking programs
	that make use of the Tensor library.
EOF
esac
cd
